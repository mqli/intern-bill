!!!
html
  head
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    //if lt IE 10
      script(src='/javascripts/lib/es5-shim.js')
    script(src='/javascripts/lib/jquery-1.8.2.js')
    script(src='/javascripts/lib/bootstrap.js')
    script(src='/javascripts/lib/jade.js')
    script(src='/javascripts/lib/coffee-script.js')
    script(src='/javascripts/hospital.coffee', type="text/coffeescript")
    style
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    script#hospital_template(type="template/jade").
      tr
        td=name
        td=price
        th: a(href="/hospital/remove/\#{_id}") delete
  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container
          a.brand(href='#') Intern Bill System
    div.container
      div.row
        div.span12
          ul.nav.nav-tabs
            li.active: a(href='/hospital') hospital
            li: a(href='/class') class
            li: a(href='/record') record
      div.row
        div.span6
          table#hospitals.table.table-bordered.table-hover
            thead: tr
              th name
              th price
              th delete
            tbody
              for hospital in hospitals
                tr
                  td=hospital.name
                  td=hospital.price
                  th: a(href="/hospital/remove/#{hospital._id}") delete
        div.span4.offset8(data-spy="affix")
          form(action="/hospital/new", method="post")
            div.alert.hide
            label name:
            input.span4(name="hospital[name]",required, type="text", placeHolder="name")
            label price:
            input.span4(name="hospital[price]",required, type="number", placeHolder="price")
            button.btn.btn-primary.offset3 add
  

    