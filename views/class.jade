!!!
html
  head
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    //if lt IE 10
      script(src='/javascripts/lib/es5-shim.js')
    script(src='/javascripts/lib/jquery-1.8.2.js')
    script(src='/javascripts/lib/bootstrap.js')
    script(src='/javascripts/lib/jade.js')
    script(src='/javascripts/lib/coffee-script.js')
    script(src='/javascripts/class.coffee', type="text/coffeescript")
    script#class_template(type="template/jade").
      tr
        td=name
        td=amount
        td=time
        td: a(href="/class/remove/\#{_id}") delete
    style
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container
          a.brand(href='#') Intern Bill System
    div.container
      div.row
        div.span12
          ul.nav.nav-tabs
            li: a(href='/hospital') hospital
            li.active: a(href='/class') class
            li: a(href='/record') record
      div.row
        div.span6
          table#classes.table.table-bordered.table-hover
            thead: tr
              th name
              th amount
              th time
              th delete
            tbody
              for clazz in classes
                tr
                  td=clazz.name
                  td=clazz.amount
                  td=clazz.time
                  th: a(href="/class/remove/#{clazz._id}") delete
        div.span4.offset8(data-spy="affix")
          form(action="/class/new", method="post")
            div.alert.hide
            label name:
            input.span4(name="class[name]",required, type="text", placeHolder="name")
            label amount:
            input.span4(name="class[amount]",required, type="number", placeHolder="amount")
            label time:
            input.span4(name="class[time]",required, type="number", placeHolder="time")
            button.btn.btn-primary.offset3 add
  

    